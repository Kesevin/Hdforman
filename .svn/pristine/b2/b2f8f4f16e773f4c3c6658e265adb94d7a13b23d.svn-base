<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/construct_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24px"
        android:layout_marginTop="40px"
        android:text="木工"
        android:textColor="@color/textDarkColor"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/text_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40px"
        android:layout_marginTop="42px"
        android:text="编辑"
        android:textColor="@color/textDarkColor"
        android:textSize="13sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@id/text_edit"
        android:layout_marginTop="40px"
        android:background="@color/colorDivide" />

    <TextView
        android:id="@+id/construct_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:layout_marginLeft="24px"
        android:layout_marginTop="38px"
        android:text="水曲柳或桃木实木线条100*100"
        android:textColor="@color/textDarkColor"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/price_per_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/construct_content"
        android:layout_marginBottom="38px"
        android:layout_marginLeft="24px"
        android:layout_marginTop="38px"
        android:text="￥180/m"
        android:textColor="#FA4F4F"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/divider"
        android:textColor="@color/textDarkColor"
        android:textSize="15sp"
        android:layout_marginRight="40px"
        android:layout_marginTop="74px"
        android:text="✖️ ️5" />

</com.zhy.autolayout.AutoRelativeLayout>