                <!--android:layout_height="82px"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:background="@color/backgroundGray"-->
                <!--android:inputType="numberDecimal"-->
                <!--android:gravity="center"-->
                <!--android:hint="宽"-->
                <!--android:textColorHint="@color/hintcolor"-->
                <!--android:textSize="13sp"/>-->

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerInParent="true"-->
                <!--android:text="×"-->
                <!--android:textColor="@color/textLightDarkColor"-->
                <!--android:textSize="20sp"-->
                <!--/>-->


        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px">


            <Button
                android:id="@+id/bt_input_confirm"
                android:layout_width="252px"
                android:layout_height="82px"
                android:background="@color/button_orange"
                android:text="确定"
                android:textColor="@color/white"
                />

            <Button
                android:id="@+id/bt_input_cancel"
                android:layout_width="252px"
                android:layout_height="82px"
                android:layout_alignParentRight="true"
                android:background="@drawable/check_stroke_gray_shape"
                android:text="取消"
                android:textColor="@color/textLightBlackColor"
                />

        </com.zhy.autolayout.AutoRelativeLayout>


    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>