<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorBackground">
    <com.dgg.hdforeman.mvp.ui.widget.autolayout.AutoToolbar
        android:id="@+id/toolbar"
        style="@style/toolbar_style"
        app:contentInsetStart="0dp">

        <include layout="@layout/title_bar_layout" />
    </com.dgg.hdforeman.mvp.ui.widget.autolayout.AutoToolbar>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/income_swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/announcement_layout"
            android:layout_width="match_parent"
            android:layout_height="190px"
            android:background="@color/colorOrange"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/left_right_spacing">
            <TextView
                style="@style/tv_white_style"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="28px"
                android:text="总收入"/>
            <TextView
                android:id="@+id/all_income"
                style="@style/tv_white_style"
                android:layout_marginLeft="10px"
                android:textSize="40px"
                tools:text="¥2000000"/>
        </com.zhy.autolayout.AutoLinearLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="140px"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/top_spacing"
            android:padding="@dimen/left_right_spacing">
            <TextView
                style="@style/tv_white_style"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="28px"
                android:textColor="@color/colorLightRed"
                android:text="可提现余额"/>
            <TextView
                android:id="@+id/can_use"
                style="@style/tv_white_style"
                android:layout_marginLeft="10px"
                android:textSize="40px"
                android:textColor="@color/colorLightRed"
                tools:text="¥2000000"/>
        </com.zhy.autolayout.AutoLinearLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginTop="16px"
            >
            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/daidaokuan_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:padding="@dimen/left_right_spacing"
                android:background="@drawable/common_layout_press_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal"
               >

                <TextView
                    style="@style/tv_white_style"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="待到款"
                    android:drawableLeft="@mipmap/daidaokuan"
                    android:drawablePadding="10px"
                    android:textColor="@color/textDarkColor"/>

                <TextView
                    android:id="@+id/will_get"
                    style="@style/tv_white_style"
                    android:textColor="@color/colorLightRed"
                    android:drawableRight="@mipmap/jump"
                    android:layout_marginLeft="10px"
                    android:drawablePadding="5px"
                    tools:text="¥2000000" />
            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/divide_line_height"
                android:background="@color/colorDivide" />
            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/yidaokuan_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:padding="@dimen/left_right_spacing"
                android:background="@drawable/common_layout_press_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <TextView
                    style="@style/tv_white_style"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="已到款"
                    android:drawableLeft="@mipmap/daidaokuan"
                    android:drawablePadding="10px"
                    android:textColor="@color/textDarkColor"/>

                <TextView
                    android:id="@+id/hava_got"
                    style="@style/tv_white_style"
                    android:textColor="@color/colorLightRed"
                    android:drawableRight="@mipmap/jump"
                    android:layout_marginLeft="10px"
                    android:drawablePadding="5px"
                    tools:text="¥2000000" />
            </com.zhy.autolayout.AutoLinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/divide_line_height"
                android:background="@color/colorDivide" />
            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/zengkoukuan_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:padding="@dimen/left_right_spacing"
                android:background="@drawable/common_layout_press_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <TextView
                    style="@style/tv_white_style"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="増扣款明细"
                    android:drawableLeft="@mipmap/zengkoukuan"
                    android:drawablePadding="10px"
                    android:textColor="@color/textDarkColor"/>

                <TextView
                    android:id="@+id/money_detail"
                    style="@style/tv_white_style"
                    android:textColor="@color/colorLightRed"
                    android:drawableRight="@mipmap/jump"
                    android:layout_marginLeft="10px"
                    android:drawablePadding="5px"
                    android:text="" />
            </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</com.zhy.autolayout.AutoRelativeLayout>