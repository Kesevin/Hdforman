<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.dgg.hdforeman.mvp.ui.widget.autolayout.AutoToolbar style="@style/auto_toolbar_style">

        <ImageButton
            android:id="@+id/toolbar_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@mipmap/back_nor" />


        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textSize="36px" />

        <TextView
            android:id="@+id/toolbar_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="20px"
            android:text="增加"
            android:textColor="@color/textWhiteColor"
            android:textSize="15sp" />
    </com.dgg.hdforeman.mvp.ui.widget.autolayout.AutoToolbar>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.dgg.hdforeman.mvp.ui.widget.autolayout.AutoRadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="180px"
            android:layout_height="match_parent"
            android:layout_marginTop="20px"
            android:background="@color/textWhiteColor"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/carpenter"
                android:layout_width="match_parent"
                android:layout_height="112px"
                android:background="@drawable/grey_white_selector"
                android:button="@null"
                android:gravity="center"
                android:text="木工"
                android:textColor="@drawable/tab_text_selector"
                android:textSize="32px" />

            <RadioButton
                android:id="@+id/bricklayer"
                android:layout_width="match_parent"
                android:layout_height="112px"
                android:background="@drawable/grey_white_selector"
                android:button="@null"
                android:gravity="center"
                android:text="瓦工"
                android:textColor="@drawable/tab_text_selector"
                android:textSize="32px" />

            <RadioButton
                android:id="@+id/electrician"
                android:layout_width="match_parent"
                android:layout_height="112px"
                android:background="@drawable/grey_white_selector"
                android:button="@null"
                android:gravity="center"
                android:text="水电工"
                android:textColor="@drawable/tab_text_selector"
                android:textSize="32px" />

            <RadioButton
                android:id="@+id/lacquering"
                android:layout_width="match_parent"
                android:layout_height="112px"
                android:background="@drawable/grey_white_selector"
                android:button="@null"
                android:gravity="center"
                android:text="漆工"
                android:textColor="@drawable/tab_text_selector"
                android:textSize="32px" />

            <RadioButton
                android:id="@+id/installation"
                android:layout_width="match_parent"
                android:layout_height="112px"
                android:background="@drawable/grey_white_selector"
                android:button="@null"
                android:gravity="center"
                android:text="安装"
                android:textColor="@drawable/tab_text_selector"
                android:textSize="32px" />

            <RadioButton
                android:id="@+id/other"
                android:layout_width="match_parent"
                android:layout_height="112px"
                android:background="@drawable/grey_white_selector"
                android:button="@null"
                android:gravity="center"
                android:text="其他"
                android:textColor="@drawable/tab_text_selector"
                android:textSize="32px" />
        </com.dgg.hdforeman.mvp.ui.widget.autolayout.AutoRadioGroup>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"
            android:layout_weight="1"
            android:background="@color/textWhiteColor"></android.support.v7.widget.RecyclerView>
    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>