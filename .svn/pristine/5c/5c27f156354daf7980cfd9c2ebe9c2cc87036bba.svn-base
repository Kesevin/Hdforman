<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">
    <include
        layout="@layout/title_bar_layout"/>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="320px"
        android:orientation="vertical"
        android:layout_marginTop="20px"
        android:background="@android:color/white">
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/set_modify_password"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="20px"
            android:paddingRight="38px">
            <ImageView
                android:id="@+id/set_list_image1"
                android:layout_width="34px"
                android:layout_height="40px"
                android:src="@mipmap/set_lock"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26px"
                android:text="修改密码"
                android:layout_toRightOf="@+id/set_list_image1"
                android:textColor="@color/textDarkColor"
                android:textSize="28px"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/jump"/>
        </com.zhy.autolayout.AutoRelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/colorDivide"/>
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/set_about"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="20px"
            android:paddingRight="38px">
            <ImageView
                android:id="@+id/set_list_image2"
                android:layout_width="40px"
                android:layout_height="40px"
                android:src="@mipmap/set_about"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26px"
                android:text="关于小顶"
                android:layout_toRightOf="@+id/set_list_image2"
                android:textColor="@color/textDarkColor"
                android:textSize="28px"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/jump"/>
        </com.zhy.autolayout.AutoRelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/colorDivide"/>
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/set_service"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="20px"
            android:paddingRight="38px">
            <ImageView
                android:id="@+id/set_list_image3"
                android:layout_width="40px"
                android:layout_height="40px"
                android:src="@mipmap/set_service"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26px"
                android:text="联系客服"
                android:layout_toRightOf="@+id/set_list_image3"
                android:textColor="@color/textDarkColor"
                android:textSize="28px"/>
            <TextView
                android:id="@+id/set_phoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                tool:text="400-000-0101"
                android:textColor="@color/colorLightRed"
                android:textSize="@dimen/def_text_size_sp"/>
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:layout_alignParentBottom="true">
            <Button
                android:id="@+id/set_loginOut"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorOrange"
                android:text="退出登陆"
                android:textColor="@drawable/btn_text_selector"
                android:textSize="28px"/>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>