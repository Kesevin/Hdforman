<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
                                     android:orientation="vertical"
                                     android:paddingTop="@dimen/px_40"
                                     android:paddingBottom="@dimen/px_40"
                                     android:paddingLeft="20px"
                                     android:paddingRight="20px"
              android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/px_40"
        android:paddingBottom="@dimen/px_40"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_40"
        android:layout_marginBottom="@dimen/px_20"
        android:text="大地砖和木地板（单选）"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/px_40"
        android:paddingLeft="@dimen/px_40"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:text="全屋强化大地板"
            android:layout_weight="1"
            android:id="@+id/tv_strong_floor"
            android:background="@drawable/tag_fllow_selector"
            android:textSize="14sp"
            android:gravity="center"
            android:paddingBottom="@dimen/px_40"
            android:paddingTop="@dimen/px_40"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="0dp"
            android:text="全屋大地砖"
            android:id="@+id/tv_big_floor"
            android:layout_marginLeft="@dimen/px_40"
            android:layout_weight="1"
            android:background="@drawable/tag_fllow_selector"
            android:textSize="14sp"
            android:gravity="center"
            android:paddingBottom="@dimen/px_40"
            android:paddingTop="@dimen/px_40"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_content"
        android:layout_marginTop="@dimen/px_40"
        android:orientation="vertical">
    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/px_40"
        android:paddingBottom="@dimen/px_40"
        android:layout_marginTop="@dimen/px_40"
        android:orientation="vertical"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_40"
            android:layout_marginBottom="@dimen/px_20"
            android:text="空调系统（单选或不选）"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/px_40"
            android:paddingLeft="@dimen/px_40"
            android:layout_marginTop="@dimen/px_20"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:text="中央空调"
                android:layout_weight="1"
                android:id="@+id/tv_air_center"
                android:background="@drawable/tag_fllow_selector"
                android:textSize="14sp"
                android:gravity="center"
                android:paddingBottom="@dimen/px_40"
                android:paddingTop="@dimen/px_40"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="0dp"
                android:text="风管机"
                android:id="@+id/tv_air_normal"
                android:layout_marginLeft="@dimen/px_40"
                android:layout_weight="1"
                android:background="@drawable/tag_fllow_selector"
                android:textSize="14sp"
                android:gravity="center"
                android:paddingBottom="@dimen/px_40"
                android:paddingTop="@dimen/px_40"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/px_40"
        android:paddingBottom="@dimen/px_40"
        android:layout_marginTop="@dimen/px_40"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_40"
            android:layout_marginBottom="@dimen/px_20"
            android:text="其他（单选或不选）"/>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/px_40"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/px_40"
            android:id="@+id/rv_others"></android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/px_40"
        android:paddingBottom="@dimen/px_40"
        android:layout_marginTop="@dimen/px_40"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_40"
            android:layout_marginBottom="@dimen/px_20"
            android:text="备注"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_20"
            android:layout_marginRight="@dimen/px_20"
            android:layout_marginTop="@dimen/px_20"
            android:background="@drawable/check_stroke_gray_shape"
            android:minLines="4"/>
        </LinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
