        android:paddingBottom="@dimen/px_30"
        android:paddingLeft="@dimen/px_24"
        android:paddingRight="@dimen/px_24"
        android:paddingTop="@dimen/px_36">

        <TextView
            android:id="@+id/mDcName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中德英伦联邦"
            android:textColor="@color/textDarkColor"
            android:textSize="@dimen/px_30"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/mDcLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_area"
            android:layout_marginLeft="@dimen/px_22"
            android:layout_toRightOf="@id/mDcName"
            tools:text="12栋1单元1004号"
            android:textSize="@dimen/px_28"
            android:textColor="@color/textLightDarkColor"
            android:layout_centerVertical="true"/>

    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/colorDivide" />

