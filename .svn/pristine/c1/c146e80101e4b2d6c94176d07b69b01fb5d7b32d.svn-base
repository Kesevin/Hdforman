<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:background="@color/white"
                                     android:orientation="vertical"
                                     android:paddingBottom="@dimen/px_40"
                                     android:paddingTop="@dimen/px_40"
                                     android:paddingLeft="@dimen/px_20"
                                     android:paddingRight="@dimen/px_20"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/px_40"
        android:paddingBottom="@dimen/px_40"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_40"
            android:layout_marginBottom="@dimen/px_20"
            android:text="大地砖和木地板（单选）"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/px_40"
            android:paddingLeft="@dimen/px_40"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:text="全屋强化大地板"
                android:layout_weight="1"
                android:id="@+id/tv_strong_floor"
                android:background="@drawable/tag_fllow_selector"
                android:textSize="14sp"
                android:gravity="center"
                android:paddingBottom="@dimen/px_40"
                android:paddingTop="@dimen/px_40"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="0dp"
                android:text="全屋大地砖"
                android:id="@+id/tv_big_floor"
                android:layout_marginLeft="@dimen/px_40"
                android:layout_weight="1"
                android:background="@drawable/tag_fllow_selector"
                android:textSize="14sp"
                android:gravity="center"
                android:paddingBottom="@dimen/px_40"
                android:paddingTop="@dimen/px_40"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_content"
            android:layout_marginTop="@dimen/px_40"
            android:orientation="vertical">
        </LinearLayout>
    </LinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
