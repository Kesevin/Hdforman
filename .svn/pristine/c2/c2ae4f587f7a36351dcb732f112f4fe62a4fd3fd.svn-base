<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="8dp"
    android:layout_height="wrap_content"
    android:background="@color/textWhiteColor">

    <TextView
        android:id="@+id/area_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24px"
        android:layout_marginTop="42px"
        android:text="客餐厅1"
        android:textColor="@color/textLightDarkColor"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/clear_text"
        android:layout_width="158px"
        android:layout_height="72px"
        android:layout_marginLeft="390px"
        android:layout_marginTop="20px"
        android:background="@drawable/btn_border_shape"
        android:gravity="center"
        android:text="清除"
        android:textColor="@color/colorLightRed" />

    <TextView
        android:id="@+id/calculate_text"
        android:layout_width="158px"
        android:layout_height="72px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="26px"
        android:layout_marginTop="20px"
        android:background="@drawable/btn_border_shape"
        android:gravity="center"
        android:text="计算"
        android:textColor="@color/colorLightRed" />

    <EditText
        android:id="@+id/length"
        android:layout_width="312px"
        android:layout_height="68px"
        android:layout_below="@+id/area_name"
        android:layout_marginLeft="24px"
        android:layout_marginTop="44px"
        android:background="@color/backgroundGray"
        android:gravity="center"
        android:hint="长"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="138px"
        android:text="✖️" />

    <EditText
        android:id="@+id/width"
        android:layout_width="312px"
        android:layout_height="68px"
        android:layout_below="@+id/area_name"
        android:layout_marginLeft="80px"
        android:layout_marginTop="44px"
        android:layout_toRightOf="@+id/length"
        android:background="@color/backgroundGray"
        android:gravity="center"
        android:hint="宽"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/perimeter"
        android:layout_width="match_parent"
        android:layout_height="68px"
        android:layout_below="@+id/length"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        android:layout_marginTop="40px"
        android:background="@color/backgroundGray"
        android:gravity="center"
        android:hint="周边"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@id/perimeter"
        android:layout_marginTop="40px"
        android:background="@color/colorDivide" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/perimeter"
        android:layout_marginLeft="24px"
        android:layout_marginTop="80px"
        android:text="套内面积"
        android:textColor="@color/textDarkColor"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/perimeter"
        android:layout_marginLeft="24px"
        android:layout_marginTop="140px"
        android:text="周长"
        android:textColor="@color/textDarkColor"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/area_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/perimeter"
        android:layout_marginRight="26px"
        android:layout_marginTop="80px"
        android:text="6㎡"
        android:textColor="@color/textDarkColor"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/perimeter_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/perimeter"
        android:layout_marginBottom="40px"
        android:layout_marginRight="26px"
        android:layout_marginTop="140px"
        android:text="6m"
        android:textColor="@color/textDarkColor"
        android:textSize="14sp" />
</com.zhy.autolayout.AutoRelativeLayout>