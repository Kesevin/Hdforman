<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
                                       android:background="@color/white"
              android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_fname"
        android:text="木工"
        android:layout_marginLeft="@dimen/px_24"
        android:textColor="#333333"
        android:textSize="@dimen/px_30"
        android:layout_marginTop="@dimen/px_42"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_edit"
        android:text="编辑"
        android:layout_marginLeft="@dimen/px_24"
        android:textColor="#333333"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/px_24"
        android:textSize="@dimen/px_30"
        android:layout_marginTop="@dimen/px_42"/>
    <View
       android:layout_width="match_parent"
        android:background="@color/translate_60"
        android:layout_height="@dimen/px_1"
        android:layout_below="@id/tv_edit"
       android:id="@+id/divider_line"
        android:layout_marginTop="@dimen/px_40"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/divider_line"
        android:padding="@dimen/px_40"
        android:id="@+id/rl_content"
        android:visibility="visible"
        android:layout_height="246px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/px_26"
            android:id="@+id/pu_puugname"
            android:textColor="#333333"
            android:text="水木桃木100不要钱"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@+id/pu_puugname"
            android:id="@+id/tv_pu_price"
            android:layout_marginTop="@dimen/px_40"
            android:textColor="#FA4F4F"
            android:text="￥180/m"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_num"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="x5"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_40"
        android:background="@color/backgroundGray"
        android:layout_below="@+id/rl_content"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_content_edit"
        android:visibility="gone"
        android:layout_height="246px"
        android:layout_below="@+id/divider_line"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/px_26"
            android:id="@+id/pu_puugname_edit"
            android:layout_marginTop="@dimen/px_40"
            android:layout_marginLeft="@dimen/px_40"
            android:textColor="#333333"
            android:text="水木桃木100不要钱"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_below="@+id/pu_puugname_edit"
            android:layout_marginTop="@dimen/px_40"
            android:text="10"
            android:minWidth="100dp"
            android:paddingTop="@dimen/px_20"
            android:layout_marginLeft="@dimen/px_40"
            android:paddingBottom="@dimen/px_20"
            android:paddingLeft="@dimen/px_20"
            android:paddingRight="@dimen/px_20"
            android:id="@+id/et_num"
            android:inputType="numberDecimal"
            android:background="@drawable/shape_bgrey"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="246px"
            android:id="@+id/tv_del"
            android:paddingLeft="@dimen/px_20"
            android:paddingRight="@dimen/px_20"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:background="@color/textRedColor"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:text="删除"/>
    </RelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>
