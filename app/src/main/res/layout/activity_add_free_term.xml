<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_add_free_term"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dgg.hdforeman.mvp.ui.project.activity.AddFreeTermActivity">

    <com.dgg.hdforeman.mvp.ui.widget.autolayout.AutoToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/colorOrange"
        app:contentInsetStart="0dp">


        <ImageView
            android:id="@+id/toolbar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@mipmap/back_nor"/>


        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:text="项目测量"
            android:textSize="36px"/>

        <TextView
            android:id="@+id/toolbar_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:drawableRight="@mipmap/shop"
            android:layout_marginRight="20px"
            android:drawablePadding="@dimen/px_20"
            android:background="@null"
            android:text="1"
            android:textColor="@color/white"/>
    </com.dgg.hdforeman.mvp.ui.widget.autolayout.AutoToolbar>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/px_24"
        android:orientation="horizontal">
    <android.support.v7.widget.RecyclerView
        android:layout_width="180px"
        android:id="@+id/rv_categrory"
        android:background="@color/white"
        android:layout_marginRight="@dimen/px_40"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/rv_product"
        android:background="@color/white"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
