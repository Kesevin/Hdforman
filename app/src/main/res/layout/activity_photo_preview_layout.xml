<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_photo_preview_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dgg.hdforeman.mvp.ui.project.activity.HDPhotoPreviewActivity">

    <com.dgg.hdforeman.mvp.ui.widget.autolayout.AutoToolbar
        android:id="@+id/toolbar"
        style="@style/toolbar_style"
        android:padding="0dp"
        app:contentInsetStart="0dp">

        <include layout="@layout/title_bar_layout" />

    </com.dgg.hdforeman.mvp.ui.widget.autolayout.AutoToolbar>
<com.zhy.autolayout.AutoLinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginLeft="@dimen/px_24"
    android:layout_marginRight="@dimen/px_24"
    android:layout_marginTop="@dimen/px_20"
    android:layout_marginBottom="@dimen/px_20"
    android:layout_weight="1"
    android:orientation="vertical">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/pic_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        />
</com.zhy.autolayout.AutoLinearLayout>
    <Button
        android:id="@+id/upLoadPictureBtn"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_alignParentBottom="true"
        android:background="@color/colorOrange"
        android:text="立即上传"
        android:textColor="@drawable/btn_text_selector"
        android:textSize="@dimen/px_28"/>

</com.zhy.autolayout.AutoLinearLayout>
