<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDivide"
    android:orientation="vertical">

    <com.dgg.hdforeman.mvp.ui.widget.autolayout.AutoToolbar
        android:id="@+id/toolbar"
        style="@style/toolbar_style"
        app:contentInsetStart="0dp">
        <include
            layout="@layout/title_bar_layout"/>
    </com.dgg.hdforeman.mvp.ui.widget.autolayout.AutoToolbar>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoLinearLayout
                    style="@style/TextLayoutStyle"
                    android:layout_marginTop="@dimen/px_20"
                    android:orientation="vertical">

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextTitleStyle"
                            android:text="项目报价"/>

                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/px_36"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextTitleStyle"
                            android:text="标准包"
                            android:textColor="@color/textDarkColor"/>

                        <TextView
                            android:id="@+id/pm_baseprices"
                            style="@style/TextContentPriceStyle"
                            tools:text="￥17000.00"
                            android:textColor="@color/textRedColor"/>

                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/px_30"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextTitleStyle"
                            android:text="个性包"
                            android:textColor="@color/textDarkColor"/>

                        <TextView
                            android:id="@+id/pm_upgradeprice"
                            style="@style/TextContentPriceStyle"
                            tools:text="￥1000000.00"
                            android:textColor="@color/textRedColor"/>

                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/px_30"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextTitleStyle"
                            android:text="其他项"
                            android:textColor="@color/textDarkColor"/>

                        <TextView
                            style="@style/TextContentPriceStyle"
                            android:text="￥32500.00"
                            android:textColor="@color/textRedColor"/>

                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/px_30"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextTitleStyle"
                            android:text="工程管理费"
                            android:textColor="@color/textDarkColor"/>

                        <TextView
                            android:id="@+id/pm_managefee"
                            style="@style/TextContentPriceStyle"
                            tools:text="￥32500.00"
                            android:textColor="@color/textRedColor"/>

                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/px_30"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextTitleStyle"
                            android:text="成本保护费"
                            android:textColor="@color/textDarkColor"/>

                        <TextView
                            android:id="@+id/pm_protectfee"
                            style="@style/TextContentPriceStyle"
                            tools:text="￥32500.00"
                            android:textColor="@color/textRedColor"/>

                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/px_30"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextTitleStyle"
                            android:text="日常清洁费"
                            android:textColor="@color/textDarkColor"/>

                        <TextView
                            android:id="@+id/pm_cleanfee"
                            style="@style/TextContentPriceStyle"
                            tools:text="￥32500.00"
                            android:textColor="@color/textRedColor"/>

                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/px_36"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextTitleStyle"
                            android:text="工程总价"
                            android:textColor="@color/textDarkColor"/>

                        <TextView
                            android:id="@+id/pm_quote"
                            style="@style/TextContentPriceStyle"
                            tools:text="￥27325.00"
                            android:textColor="@color/textRedColor"/>

                    </com.zhy.autolayout.AutoLinearLayout>

                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    style="@style/TextLayoutStyle"
                    android:layout_marginTop="@dimen/px_30">

                    <TextView
                        style="@style/TextTitleStyle"
                        android:text="项目内容"/>

                </com.zhy.autolayout.AutoLinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerViewContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    tools:listitem="@layout/item_project_list_layout">

                </android.support.v7.widget.RecyclerView>

                <com.zhy.autolayout.AutoLinearLayout
                    style="@style/TextLayoutStyle"
                    android:layout_marginBottom="@dimen/px_60"
                    android:layout_marginTop="2px">

                    <TextView
                        style="@style/TextTitleStyle"
                        android:text="合计"/>

                    <TextView
                        android:id="@+id/total_area"
                        style="@style/TextContentPriceStyle"
                        tools:text="98m²"/>

                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
</com.zhy.autolayout.AutoLinearLayout>